; Miirakuru Config File
; -*-*-*-*-*-*-*-*-*-*-

; You can keep this config file pushable to commit since it does not contains
; any API Keys

; Accepted values:
;   Boolean : 1, 0, true, false, yes, no
;   Null    : null, empty, none
;   Array   : separated by comma (,), unless specified otherwise

[General.WhiteList.Server]
; Tells Miirakuru which server to whitelist
; Default: none
; Accepted values: Null, Array
; Example: 1111111111111,2222222222222,3333333333333
Servers = null

[General.WhiteList.User]
; Tells Miirakuru which user to whitelist
; Default: none
; Accepted values: Null, Array
; Example: 1111111111111,2222222222222,3333333333333
Users = null

[Task.Oauth.Refresh]
; Tells Miirakuru time interval to refresh the OAuth token
; Default: 10 minutes
; Accepted values: Integer
Seconds = 0
Minutes = 10
Hours = 0
Days = 0

[Task.Activity.Sync]
; Tells Miirakuru time interval to check if there is any activity to sync
; Default: 1 minute
; Accepted values: Integer
Seconds = 0
Minutes = 1
Hours = 0
Days = 0

